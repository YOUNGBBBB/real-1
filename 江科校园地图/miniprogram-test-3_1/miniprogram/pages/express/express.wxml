<view class="page-body">
  <view class="page-section page-section-gap">

    <map id="myMap" scale='{{scale}}' style="width: 100%; height: 1180rpx;" latitude="{{latitude}}" longitude="{{longitude}}" markers="{{markers}}" polyline="{{polyline}}" show-location>
    
    
    
    <!-- 路线 -->
     <cover-view bindtap='showInput'  class='lx'>
      <cover-image src='/images/路线(1).png'></cover-image>
      </cover-view>
   
    <!-- 按钮 -->
    <cover-view bindtap='moveToLocation'  class='zj'>
      <cover-image src='/images/定位.png' ></cover-image>
      </cover-view>
      
    
    </map>


  </view>
  
</view>

